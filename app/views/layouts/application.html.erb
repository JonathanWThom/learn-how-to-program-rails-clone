<!DOCTYPE html>
<html>
  <head>
    <title>LearnHowToProgram</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="container">
      <ul id="lesson-nav">
        <%= yield(:navbar) %>
      </ul>
    </div>

    <% if flash[:notice] %>
    <div class="container flash">
      <div class="row">
        <div class="col-sm-4">
          <%= flash[:notice] %>
        </div>
      </div>
    </div>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
