<% content_for(:navbar) do %>
  <li>Courses</li>
  <li><%= link_to "Add A Lesson", new_week_lesson_path %></li>
<% end %>

<h1>Lessons</h1>
<% if @lessons.any? %>
  <ul>
    <% @lessons.each do |lesson| %>
    <li><%= link_to lesson.name, week_lesson_path(lesson.week, lesson) %></li>
    <% end %>
  </ul>
<% end %>
